{%- style -%}
  .seo_content--{{ section.id }} {
    background: {{ section.settings.background_color }};
  }
  .seo-content_title,
  .seo-content_right {
    color: {{ section.settings.font_color }};
  }
{%- endstyle -%}

<div class="seo_content_container">
  <div class="seo-content_main_image">
  {%- if section.settings.main_image != blank -%}
    {%- render 'image', image: section.settings.main_image -%}
  {%- endif -%}
  </div>

  <div class="seo-content_right">
    <div class="seo-main-content_text">

      {%- if section.settings.main_title != blank -%}
        <h5 class="seo-content_title">{{ section.settings.main_title }}</h5>
      {%- endif -%}
      <p class="text-small">{{ section.settings.main_text }}</p>
      <p class="title-tag">{{ section.settings.secondary_title }}</p>
      <p class="text-small">{{ section.settings.secondary_text }}</p>

    </div>
    <div class="seo-block_content">

      {%- for block in section.blocks -%}
        {%- if block.settings.block_image != blank -%}
          {%- render 'image', image: block.settings.block_image -%}
        {%- endif -%}
      <div class="seo-block-content_text">
        <p class="title-tag">{{ block.settings.block_title }}</p>
        <p class="text-small">{{ block.settings.block_text }}</p>
      </div>
      {%- endfor -%}

    </div>
  </div>
</div>
