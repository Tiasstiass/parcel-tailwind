{% comment %}
  shoplab
  Include assets based on page_type
{% endcomment %}

<script src="{{ 'lab.main.min.js' | asset_url }}" defer="defer"></script>

{%- case request.page_type -%}
  {%- when "index" -%}
    <script src="{{ 'lab.index.min.js' | asset_url }}" defer="defer"></script>

  {%- when "collection" -%}
    <script src="{{ 'lab.collection.min.js' | asset_url }}" defer="defer"></script>

  {%- when "product" -%}
    <script src="{{ 'lab.product.min.js' | asset_url }}" defer="defer"></script>

  {%- when "cart" -%}
    <script src="{{ 'lab.cart.min.js' | asset_url }}" defer="defer"></script>

  {%- when "page" -%}
    <script src="{{ 'lab.page.min.js' | asset_url }}" defer="defer"></script>

  {%- when contains 'customers' -%}
    <script src="{{ 'lab.customer.min.js' | asset_url }}" defer="defer"></script>

  {%- when 'blog' -%}
    <script src="{{ 'lab.blog.min.js' | asset_url }}" defer="defer"></script>

  {%- when 'article' -%}
    <script src="{{ 'lab.article.min.js' | asset_url }}" defer="defer"></script>

  {%- when 'gift_card' -%}
    <script src="{{ 'lab.gift_card.min.js' | asset_url }}" defer="defer"></script>

  {%- when 'password' -%}
    <script src="{{ 'lab.password.min.js' | asset_url }}" defer="defer"></script>

  {%- when 'search' -%}
    <script src="{{ 'lab.search.min.js' | asset_url }}" defer="defer"></script>

{%- endcase -%}
