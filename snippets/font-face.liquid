<style>
  {%- if settings.main_font != blank -%}
    {%- assign main_font_file = settings.main_font | handleize -%}
    @font-face {
      font-family: '{{ settings.main_font }}';
      src: 
        local('{{ settings.main_font }}'),
        url("{{ main_font_file | asset_url | split: '?' | first }}.woff2") format("woff2"), 
        url("{{ main_font_file | asset_url | split: '?' | first }}.woff") format("woff");
      font-style: normal;
      font-weight: normal;
      font-display: block;  
    }
    :root {
      --font-main: "{{ settings.main_font }}" !important;
      --text-family-regular: "{{ settings.main_font }}" !important;
    }
  {%- endif -%}

  {%- if settings.heading_font != blank -%}
    {%- assign heading_font_file = settings.heading_font | handleize -%}
    @font-face {
      font-family: '{{ settings.heading_font }}';
      src: 
        local('{{ settings.heading_font }}'),
        url("{{ heading_font_file | asset_url | split: '?' | first }}.woff2") format("woff2"), 
        url("{{ heading_font_file | asset_url | split: '?' | first }}.woff") format("woff"); 
      font-style: normal;
      font-weight: normal;
      font-display: block;  
    }
    :root {
      --font-heading: "{{ settings.heading_font }}" !important;
    }
  {%- endif -%}

  {%- if settings.menu_font != blank -%}
    {%- assign menu_font_file = settings.menu_font | handleize -%}
    @font-face {
      font-family: '{{ settings.menu_font }}';
      src: 
        local('{{ settings.menu_font }}'),
        url("{{ menu_font_file | asset_url | split: '?' | first }}.woff") format("woff"),
        url("{{ menu_font_file | asset_url | split: '?' | first }}.woff2") format("woff2");
      font-style: normal;
      font-weight: normal;
      font-display: block;  
    }
    :root {
      --font-menu: "{{ settings.menu_font }}" !important;
    }
  {%- endif -%}

  {%- if settings.text_font != blank -%}
    {%- assign text_font_file = settings.text_font | handleize -%}
    @font-face {
      font-family: '{{ settings.text_font }}';
      src: 
        local('{{ settings.text_font }}'),
        url("{{ text_font_file | asset_url | split: '?' | first }}.woff") format("woff"),
        url("{{ text_font_file | asset_url | split: '?' | first }}.woff2") format("woff2");
      font-style: normal;
      font-weight: normal;
      font-display: block;  
    }
    :root {
      --font-text: "{{ settings.text_font }}" !important;
    }
  {%- endif -%}
</style>