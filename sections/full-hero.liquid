{% stylesheet %}
  .full-hero {
    position: relative;
  }

  .full-hero .full-hero__wrapper {
    width: 100%;
    max-height: 750px;
    height: 750px;
  }

  .full-hero .full-hero__wrapper picture img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .full-hero .full-hero-text__wrapper {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 100px;
    z-index: 2;
  }

  .full-hero .hero-title {
    width: 100%;
    line-height: 60px;
    text-align: center;
    text-transform: uppercase;
  }

  .full-hero .hero-subtitle {
    width: 100%;
    line-height:  33px;
    text-align: center;
    text-transform: uppercase;
  }

  .full-hero .hero-button {
    line-height:  120%;
    margin: 0.75rem auto;
  }

  .full-hero .video-wrapper {
    max-height: 750px;
  }

  @media (max-width: 768px) {
    .full-hero .full-hero__wrapper {
      width: 100%;
      max-height: 450px;
      height: 450px;
    }

    .full-hero .video-wrapper {
      max-height: 450px;
    }
}
{% endstylesheet %}

{%- render 'full-hero', block: section -%}

{% schema %}
{
  "name": "Full Hero",
  "class": "shopify-section",
  "settings": [
    {
      "type": "header",
      "content": "Image Setting"
    },
    {
      "type": "image_picker",
      "id": "hero_bg",
      "label": "Hero Background Image"
    },
    {
      "type": "image_picker",
      "id": "hero_bg_mobile",
      "label": "Hero Mobile Background Image"
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Title Font Size",
      "default": 45
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "SubTitle"
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "SubTitle Font Size",
      "default": 25
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "SubTitle Color",
      "default": "#006874"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "range",
      "id": "btn_font_size",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Button Font Size",
      "default": 12
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button text Color",
      "default": "#006874"
    },
    {
      "type": "header",
      "content": "Video Setting"
    },
    {
      "id": "video_url",
      "type": "video_url",
      "label": "Video URL",
      "accept": [
        "vimeo"
      ]
    },
    {
      "id": "video_url_mobile",
      "type": "video_url",
      "label": "Video URL mobile",
      "accept": [
        "vimeo"
      ]
    },
    {
      "type": "image_picker",
      "id": "video_thumb",
      "label": "Video Thumbnail"
    },
    {
      "type": "image_picker",
      "id": "video_thumb_mobile",
      "label": "Video Thumbnail mobile"
    },
    {
      "type": "checkbox",
      "id": "video_thumb_mobile_force",
      "label": "Force image on mobile (disable video)",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Full Hero",
      "category": "Content"
    }
  ]
}
{% endschema %}
