{%- style -%}
  .logo-bar-section .page-width {
    padding: 0px;
  }
  .logo-bar-section .logo-bar__wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #logo-bar--{{ section.id }} .logo-bar__wrapper {
    gap: {{ section.settings.grid_gap }}px;
  }
  .logo-bar__item-wrapper {
    flex: 1 1 auto;
    border-right: 1px solid var(--color__1);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .logo-bar__item-wrapper:first-child {
    border-left: 1px solid var(--color__1);
  }
  .logo-bar-section picture {
    min-height: 54px;
    display: flex;
    align-items: center;
  }
  .logo-bar-section picture img {
    max-height: 100px;
  }

  @media (max-width: 1439px) {
    .logo-bar__item-wrapper:last-child {
      border-right: none;
    }
    .logo-bar__item-wrapper:first-child {
      border-left: none;
    }
  }
  @media (max-width: 767px) {
    .logo-bar__item-wrapper:nth-child(n+4) {
      display: none;
    }
  }


  {%- if section.settings.bg_color != blank and section.settings.bg_color != 'rgba(0,0,0,0)' -%}
    #logo-bar--{{ section.id }} {
      background: {{ section.settings.bg_color }};
      padding: 50px 0;
    }
    #logo-bar--{{ section.id }} .logo-bar__item-wrapper {
      border: none !important;
    }
    @media (max-width: 767px) {
      #logo-bar--{{ section.id }} .logo-bar__wrapper {
        flex-wrap: wrap;
      }
      #logo-bar--{{ section.id }} .logo-bar__item-wrapper {
        display: flex !important;
        flex: 0 0 calc(33% - {{ section.settings.grid_gap }}px);
      }
      #logo-bar--{{ section.id }} .page-width {
        padding-left: var(--content-padding-mobile);
        padding-right: var(--content-padding-mobile);
      }
    }
  {%- endif -%}
{%- endstyle -%}

{%- render 'logo-bar', object: section -%}

{% schema %}
{
  "name": "Logo bar",
  "class": "shopify-section",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section background color"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Offset between blocks",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo bar",
      "category": "Content"
    }
  ]
}
{% endschema %}