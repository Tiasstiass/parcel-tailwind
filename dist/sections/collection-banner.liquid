{% stylesheet %}

  @media (min-width: 500px) and (max-width:767px) {
    .collection-banner-section .image-container {
      display: none;
    }

    .collection-banner-section {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .collection-banner-section .text-container {
      margin-left: 0;
    }

    .collection-banner-section .text-container .text-body {
      margin-left: auto;
      margin-right: auto;
    }

    .collection-banner-section .text-container .button-primary {
      margin-left: auto;
      margin-right: auto;
    }

    .collection-banner-section .text-container .text-body {
      width: 90%;
    }

  }

  @media (min-width: 768px) and (max-width: 991px) {
    .collection-banner-section .image-container {
      width: 308px;
      min-width: 308px;
    }
     .collection-banner-section .text-container {
       margin-left: 26px;
     }

    .collection-banner-section .text-container .text-body {
      width: 90%;
    }

  }

  @media (min-width: 992px) {
    .collection-banner-section .image-container {
      width: 45%;
      min-width: 45%;
    }

    .collection-banner-section .text-container {
      margin-left: 147px;
    }

    .collection-banner-section .text-container .text-body {
      width: 60%;
    }
  }

  .collection-banner-section {
    min-height: 360px;
    max-width: var(--content-width-desktop);
    margin: 0 auto;
  }

  .collection-banner-section .image-container {
    display: block;
  }

  .collection-banner-section .text-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-self: center;
    padding: 40px 40px 40px 0;
  }

  .collection-banner-section .text-container * {
    margin-top: 0;
    margin-bottom: 15px
  }

  .collection-banner-section .text-container .button-primary {
    margin-bottom: 0;
  }
{% endstylesheet %}

