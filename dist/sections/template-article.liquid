{% stylesheet %}

.article-page__toc.w-100 {
  width: 100px;
}

  .article-page p.abstract {
   font-family: var(--text-family-regular);
   line-height: 31px;
  }

  .article-page .mt-5 {
    margin-top: 54px;
  }

  .article-page .mh-5 {
    margin: 54px 0;
  }

  .article-page .mb-2 {
    margin-bottom: 18px;
  }

  .article-page.article-wrapper {
    padding: 108px 0;
    gap: 30px;
    overflow-x: hidden;
  }

  .article-page__left-sidebar,
  .article-page__right-sidebar {
    flex: 1 0;
    min-width: 320px;
  }

  .article-page__left-sidebar {
    order: 1;
    z-index: 3;
  }
  .article-page__right-sidebar {
    order: 3;
    gap: 54px;
  }

  .article-page__article-content {
    flex: 2 1 100%;
    order: 2;
  }

  .article-page__hamburger-menu {
    display: none;
    flex: 1 1 100%;
    min-height: 54px;
    max-height: 54px;
    border-bottom: 1px solid #fff;
  }
  .article-page__toc {
    background-color: var(--color__willow-brook);
    min-height: 400px;
  }


  .article-page__toc__contents {
    flex: 2 1 60%;
    background-color: var(--color__willow-brook);
    border: none;
  }

  .article-page__toc__socials .btn-share {
    cursor: pointer;
  }
  .article-page__toc__socials .btn-share * {
    pointer-events: none;
  }

  .article-page__toc__socials {
    gap: 18px;
    min-width: 100px;
    max-width: 100px;
    flex: 1 1 40%;
    border: none;
  }

  .article-page__toc__socials .social-icons {
    gap: 18px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .article-page__toc__socials .social-icons li,
  .article-page__toc__socials div {
    border-radius: 100%;
    height: 36px;
    width: 36px;
    border: none !important;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color__2);
  }

  .article-page__toc__contents__title {
    font-weight: 700;
    overflow: hidden;
  }

  .article-page__top-articles {
    max-width: 320px;
  }

  .article-page__top-article {
    width: 100%;
    height: 144px;
    gap: 30px;
    border: none;
    border-bottom: 1px solid var(--color__1);
  }

  .article-page__top-article h1 {
    color: var(--text-color-primary);
    width: 42px;
    margin: 0;
  }

  .article-page__top-articles .title-tag {
    color: var(--color__2);
  }

  .article-page__top-article p {
    font-family: var(--text-family-regular) !important;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2; /* number of lines to show */
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .article-page__toc__bottom {
    height: 100%;
    width: fit-content;
    overflow: hidden;
  }


  .article-page__toc__contents div, .article-page__toc__contents p {
    opacity: 1;
    transition: opacity 800ms ease-in-out;
    height: 125px;
    width: 80%;
    display: flex !important;
    flex-direction: column;
    justify-content: center;
    border: none;
  }

  .article-page__toc__contents p {
    height: 80px;
  }


  .article-page__toc__contents div:not(:first-child) {
    border-top: 1px solid #fff;
  }

  .article-page__toc__contents div > a {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3; /* number of lines to show */
    line-clamp: 3;
    -webkit-box-orient: vertical;
  }

  .article-page__article-content__h2 {
    color: var(--text-color-primary);
  }

  .article-page__article-content__callout h5,
  .article-page__article-content__callout h6 {
    margin: 0;
  }

  .article-page__article-content__callout {
    background-color: var(--color__feta);
    padding: 30px;
  }

  .article-page__article-content__list {
    list-style: none;
    padding: 0;
  }

  .article-page__article-content__list li {
    gap: 18px;
    margin: 18px 0;
    font-family : var(--font-text) !important;
    font-size: clamp(13px, 1.2vw, 15px);
  }


  .article-page__article-content
  .article-page__promotion-products-mid {
    flex-wrap: wrap;
    margin-top: 90px;
    align-items: stretch;
  }

  .article-page__article-content .product-grid-item__wrapper,
  .article-page__promotion-product-side .product-grid-item__wrapper {
    border-left: 1px solid var(--color__border-secondary);
  }

  @media (max-width: 1434px) {
    .article-page__article-content
    .article-page__promotion-products-mid
    .product-grid-item__wrapper {
      border: 1px solid var(--color__border-secondary);
    }
  }


  @media (max-width: 1250px) {
    .article-page__hamburger-menu {
      display: flex
    }
    .article-page__toc__contents div, .article-page__toc__contents p {
      opacity: 0;
    }
    .article-page__toc__contents {
      border-left: none;
      transition: all 200ms ease-in-out;
      width: 0;
      /* height: 0; */
    }

    .article-page__toc__contents.expanded div, .article-page__toc__contents.expanded p {
      opacity: 1;
    }

    .article-page__toc__contents.expanded {
      width: 400px;
      height: auto;
      overflow-y: scroll;
    }


    .article-page__toc__contents.expanded div, .article-page__toc__contents.expanded p {
      min-height: 100px;
      max-height: 100px;
      width: 90%;
    }

    .article-page__toc__contents.expanded p {
      min-height: 80px;
    }

    .article-page__left-sidebar {
      min-width: fit-content;
      max-width: fit-content;
    }

    .article-page__toc {
      width: 100px;
      height: fit-content;
    }

    .article-page__toc__bottom {
      height: 400px;
    }
  }

  @media (max-width: 1023px) {
    .article-page.article-wrapper {
      flex-wrap: wrap;
    }

    .article-page__article-content {
      max-width: 80%;
    }

    .article-page__right-sidebar {
      margin-top: 54px;
      flex-direction: row;
      flex-wrap: wrap;
      align-items: flex-start;
    }

    .article-page__right-sidebar > div {
      width: 320px;
    }

    .article-page__right-sidebar .article-page__promotion-product-side {
      margin-top: 90px;
    }

  }

  .article-page__image-with-caption {
    min-width: 320px;
    min-height: 320px;
  }

  .article-page__image-with-caption__image-container {
    width: 100%;
    min-height: 320px;
    margin-bottom: 17px;
  }

  .article-page__right-sidebar .article-page__image-with-caption__image-container {
    height: 320px;
  }

  .article-page__featured-product {
    margin-top: 108px;
    width: 100%;
    height: 505px;
    justify-content: center;
  }

  .article-page__featured-product .grid--item__wrapper {
    flex: 0 0 360px;
    max-width: 360px;
  }

  .article-page__featured-product .product-grid-item__actions {
    padding-left: 1.5rem;
  }

  /* Extra content blocks */
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2 {
    background: #f4fef2;
    grid-column: span 2;
    max-width: initial;
  }
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2 .product-grid-item,
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-3 .product-grid-item {
    flex-direction: row;
  }
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2 .product-grid-item__image,
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-3 .product-grid-item__image {
    flex: 1 1 50%;
    display: flex;
    align-items: center;
  }
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2 .product-grid-item__data-wrapper,
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-3 .product-grid-item__data-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-right: 15px;
  }
  .article-page__featured-product .extra-block__element.product-grid-item__wrapper .product-grid-item__image {
    max-width: 320px;
  }
  .article-page__featured-product .extra-block__element .product-grid-item {
    background: none;
  }
  @media (max-width: 767px) {

    .article-page__toc__contents.expanded {
      width: 200px;
      height: auto;
      overflow-y: scroll;
    }


    .article-page__left-sidebar {
      position: fixed;
      top: 30%;
      left: 0;
    }

    .article-page__article-content {
      margin: auto;
    }

    .article-page__featured-product {
      height: 578px;
     }

    .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2,
    .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-3 {
      grid-column: span 2 !important;
    }
    .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2 .product-grid-item,
    .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-3 .product-grid-item {
      flex-direction: column;
    }
    .article-page__featured-product .extra-block__element.product-grid-item__wrapper .product-grid-item__image {
      max-width: 100% !important;
    }
    .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-2 .product-grid-item__data-wrapper,
    .article-page__featured-product .extra-block__element.product-grid-item__wrapper.columns-3 .product-grid-item__data-wrapper {
      padding: 0px;
    }
  }

{% endstylesheet %}

