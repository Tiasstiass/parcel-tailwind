{%- render 'layout-footer' -%}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#F3F3F3"
    },
    {
      "type": "link_list",
      "id": "menu1",
      "label": "Menu 1",
      "default": "main-menu"
    },
    {
      "type": "link_list",
      "id": "menu2",
      "label": "Menu 2"
    },
    {
      "type": "link_list",
      "id": "menu3",
      "label": "Menu 3"
    },
    {
      "type": "checkbox",
      "id": "social",
      "label": "Enable social icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Payment icons"
    },
    {
      "type": "checkbox",
      "id": "payments",
      "label": "Enable payment icons",
      "default": true
    },
    {
      "type": "text",
      "id": "payments_title",
      "label": "Payments title",
      "default": "Pay securely"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Title",
      "default": "Stay in the loop and find the best deals!"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Text"
    },
    {
      "type": "textarea",
      "id": "newsletter_disclaimer",
      "label": "Disclaimer text"
    },
    {
      "type": "textarea",
      "id": "newsletter_klaviyo",
      "label": "Klaviyo snippet code (optional)"
    }
  ]
}
{% endschema %}