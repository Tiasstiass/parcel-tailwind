{% stylesheet %}
  .collection-description__description {
    font-family: var(--font-text);
  }
  .collection-description__description h1 {
    color: var(--heading-color);
    font-family: var(--font-heading);
    font-size: var(--font-heading-size);
    text-transform: uppercase; 
    line-height: 150%;
    margin-bottom: 20px;
    text-align: center;
  }
  .collection-description__description h2 {
    font-size: 45px;
    line-height: 60px;
    color: var(--heading-color);
    text-transform: uppercase;
    text-align: center;
    padding: 85px 10px 75px 10px;
  }
  .collection-description__description ul {
    text-align: center;
    list-style: initial;
    list-style-position: inside;
  }
  @media (max-width: 768px) {
    .collection-description__description h1 {
      font-size: var(--font-heading-size-mobile);
    }
    .collection-description__description h2 {
      font-size: 20px;
      line-height: 31px;
      padding: 50px 20px 25px 20px;
    }
  }
{% endstylesheet %}

{%- render 'collection-description', section: section -%}

{% schema %}
{
  "name": "Collection Description",
  "class": "shopify-section collection-description",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Collection Title",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection Description",
      "category": "Collection"
    }
  ]
}
{% endschema %}