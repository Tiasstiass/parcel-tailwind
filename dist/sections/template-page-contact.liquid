<h1 class="contact-page-title">{{ page.title }}</h1>

{% form 'contact' %}

{{ form.errors | default_errors }}

<h2>Send us a message</h2>
  <div class="first-name">
    <label for="first-name">First name*</label>
    <input type="text" name="contact[first_name]" />
  </div>

  <div class="last-name">
    <label for="last-name">Last name*</label>
    <input type="text" name="contact[last_name]" />
  </div>

  <div class="email">
    <label for="email">Email*</label>
    <input type="email" name="contact[email]" />
  </div>

  <div class="phone-number">
    <label for="phone-number">Telephone</label>
    <input type="phone" name="contact[phone_number]" />
  </div>

  <div class="message">
    <label for="message">Message</label>
    <textarea name="contact[body]"></textarea>
  </div>

  <div class="submit">
    <input class="btn cta" type="submit" value="Send message" />
  </div>
{% endform %}


{% style %}
.contact-page-title {
    margin: 6em auto 2em auto;
    text-align: center;
    text-transform: uppercase;
}
form {
    width: 60%;
    margin: 2em auto 2em auto;
    background: #f5f6f5;
    padding: 3em;
}
@media only screen and (max-width: 600px) {
    form {
        width: 90%;
    }
    .contact-page-title {
        margin: 4em auto 2em auto;
    }
}
.first-name,
.last-name,
.email,
.phone-number,
.message {
    display: flex;
    flex-direction: column;
    margin: 2em auto 2em auto;

}

{% endstyle %}
