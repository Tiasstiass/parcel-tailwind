{% stylesheet %} 
  .page-hero--text-wrapper,
  .page-hero--image-wrapper {
    width: 50%;
  }
  .page-hero--image-wrapper {
    min-height: 500px;
    margin: auto;
  }
  .page-hero--text-wrapper {
    padding: 0 clamp(6px, 10.5vw, 148px);
    height: 100%;
    margin: auto;
    display: flex;
    align-items: center;
  }
  .page-hero__main-wrapper img {
    height: 100%;
  }
  .page-hero__main-wrapper {
    padding: 0 !important;
  }
  @media (max-width: 1023px) {
    .page-hero--text-wrapper {
      order: 2;
      text-align: center;
    }
    .page-hero__main-wrapper {
      flex-direction: column;
    }
    .page-hero__main-wrapper div {
      width: 100%;
      padding: 25px 25px 0 25px;
    }
    .page-hero--image-wrapper { 
      min-height: initial;
      max-height: 350px;
    }
  }
  @media (max-width: 767px) {
    .page-hero--image-wrapper { 
      max-height: 200px;
    }
  }
{% endstylesheet %}

{%- render 'page-hero', block: section -%}

{% schema %}
{
  "name": "Page Hero",
  "class": "shopify-section page-hero-section",
  "settings": [
    {
      "type": "textarea",
      "id": "text",
      "label": "Section Text",
      "default": "Text..."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image Picker"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font Color",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "Page Hero",
      "category": "Content"
    }
  ]
}
{% endschema %}