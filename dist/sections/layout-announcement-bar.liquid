{% render 'layout-announcement-bar', section: section %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible",
      "label": "Show Announcement bar",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Show only on home page",
      "default": true
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#006874"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement bar block",
      "limit": 4,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}