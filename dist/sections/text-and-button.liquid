{% stylesheet %}
  .text-and-button__subheading {
    font-family: var(--font-heading);
    font-size: 20px;
    line-height: 30px;
    color: var(--heading-color);
  }
  .text-and-button__container {
    max-width: 940px;
    padding: 10px;
  }
  .text-and-button__container .heading {
    font-weight: 500;
  }
  .text-and-button__description {
    font-family: var(--font-text); 
    padding: 0 30px;
    line-height: 22px;
  }
  @media (max-width: 767px) {
    .text-and-button__description {
      line-height: 18px;
    }
  }
{% endstylesheet %}

{%- liquid 
  assign isRestricted = false
  if collection and section.settings.collection != blank
    if collection.handle != section.settings.collection
      assign isRestricted = true
    endif
  endif

  if isRestricted == false
    render 'text-and-button', section: section
  endif
-%}

