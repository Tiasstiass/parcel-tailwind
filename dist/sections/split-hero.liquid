{% stylesheet %}
  .split-hero {
    display: flex;
  }
  .split-hero .hero-grid__item {
    width: 50%;
    height: 650px;
  }
  .split-hero .hero-image__wrapper {
    position: relative;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .split-hero .hero-text__wrapper {
    position: absolute;
    width: 100%;
    max-width: 715px;
    min-height: 300px;
    text-align: center;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0px);
  }
  .split-hero .hero-image__wrapper .hero-title {
    text-align: center;
    text-transform: uppercase;
    line-height: 100%;
  }
  .split-hero .hero-image__wrapper .hero-subtitle {
    text-align: center;
    text-transform: uppercase;
  }
  .split-hero .hero-video__wrapper .video-section {
    max-height: 650px;
    height: 100%;
  }
  .split-hero .hero-video__wrapper .video-section .video-wrapper {
    height: 100%;
  }
  .split-hero .hero-video__wrapper .video-section .video-wrapper .video-holder {
    height: 100%;
  }
  .split-hero .hero-video__wrapper .video-section .video-wrapper .video-holder iframe {
    min-width: 1155px;
    width: 100%;
    height: 100%;
  }

  @media(max-width: 768px) {
    .split-hero .hero-grid__item {
      width: 100%;
      height: 400px;
    }
    .split-hero .hero-video__wrapper {
      display: none;
    }
    .split-hero .hero-text__wrapper {
      min-height: 0;
      bottom: 50px;
    }
  }
{% endstylesheet %}

{%- render 'split-hero', block: section -%}

