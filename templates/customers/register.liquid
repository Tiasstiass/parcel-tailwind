{% layout 'theme' %}

<div class="template page-width pt-10 pb-10">
  {%- style -%}
    {% comment %} Buttons & Form Styling {% endcomment %}
    .main-form__container button a {
      color: var(--button-cta-color)!important;
    }
    .main-form__container button:hover > a {
      color: var(--button-cta-hover-color)!important;
    }
    .main-form__container form input {
      height: 50px;
      width: 459px!important;
      margin-bottom: 25px!important;
      border: 2px solid #7E7E7E!important;
      margin: 0 auto;
    }
    .main-form__container button {
      width: 459px;
      min-height: 50px;
      margin: 0 auto 25px auto;
    }
    {% comment %} Responsive CSS {% endcomment %}
    @media(max-width:768px) {
      .main-form__container form input {
        width: 100%!important;
      }
      .main-form__container button {
        width: 100%!important;
        padding: 0px 25px!important;
      }
    }
    .errors li {
      text-align: center;
      padding: 4px;
    }
  {%- endstyle -%}

  <div class="heading-h3 text-center">{{ 'customer.entry.create_account' | t }}</div>

    {% comment %} Customer Account Login {% endcomment %}
    <div id="CreateCustomer" class="main-form__container">

      {%- form 'create_customer', class: 'flex justify-center flex-col' -%}
      <div class="p-5">
        {{ form.errors | default_errors }}
        
        {%- if form.posted_successfully? -%}
        {{ 'customer.registration.success' | t }}
        {%- endif -%}
      </div>

      <input type="text"     name="customer[first_name]" id="register-page-field__first-name" value="" size="30" placeholder="{{ 'form.first_name' | t }}" autocorrect="off" autocapitalize="off" autofocus class="cursor-text">
      <input type="text"     name="customer[last_name]"  id="register-page-field__last-name"  value="" size="30" placeholder="{{ 'form.last_name' | t }}"  autocorrect="off" autocapitalize="off" autofocus class="cursor-text">
      <input type="email"    name="customer[email]"      id="register-page-field__email"      value="" size="30" placeholder="{{ 'form.email' | t }}"      autocorrect="off" autocapitalize="off" autofocus class="cursor-text">
      <input type="password" name="customer[password]"   id="register-page-field__password"   value="" size="30" placeholder="{{ 'form.password' | t }}"   autocorrect="off" autocapitalize="off" autofocus class="cursor-text{% if form.errors contains 'password' %} error{% endif %}">

      <input type="hidden" name="return_to" value="/account/register" /> 

      <button class="button cta mt-1" value="Create" type="submit">{{ 'customer.entry.create_account' | t }}</button>
      {%- endform -%}

    </div>
</div>